{
  "name": "team-mate-pro/doctrine-utils-bundle",
  "description": "Doctrine utilities bundle for Team Mate Pro - handles file persistence and other Doctrine enhancements",
  "version": "1.0.5",
  "type": "symfony-bundle",
  "license": "MIT",
  "require": {
    "php": ">=8.3",
    "symfony/framework-bundle": "^7.0",
    "symfony/dependency-injection": "^7.0",
    "symfony/config": "^7.0",
    "symfony/http-foundation": "^7.0",
    "doctrine/orm": "^3.0",
    "doctrine/doctrine-bundle": "^2.0",
    "symfony/uid": "^7.0",
    "symfony/doctrine-bridge": "^7.0",
    "league/flysystem": "^3.0",
    "team-mate-pro/contracts": "^1.0.11"
  },
  "autoload": {
    "psr-4": {
      "TeamMatePro\\DoctrineUtilsBundle\\": "src/"
    },
    "files": [
      "src/Utils/doctrine-util.php"
    ]
  },
  "scripts": {
    "phpunit": "APP_ENV=test ./vendor/bin/phpunit tests --testdox --colors=always",
    "tests:unit": "@phpunit",
    "phpcs": "php ./vendor/bin/phpcs --standard=phpcs.xml --exclude=Generic.Files.LineLength",
    "phpcs:fix": "php ./vendor/bin/phpcbf --standard=phpcs.xml --exclude=Generic.Files.LineLength",
    "phpstan": "php vendor/phpstan/phpstan/phpstan analyse --memory-limit=1G",
    "phpstan:baseline": "php vendor/phpstan/phpstan/phpstan analyse --memory-limit=1G --generate-baseline"
  },
  "autoload-dev": {
    "psr-4": {
      "TeamMatePro\\DoctrineUtilsBundle\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "brianium/paratest": "^7.0",
    "phpstan/phpstan": "*",
    "phpstan/phpstan-phpunit": "*",
    "phpstan/phpstan-symfony": "*",
    "phpstan/extension-installer": "*",
    "team-mate-pro/make": "^1.0",
    "squizlabs/php_codesniffer": "^4.0"
  },
  "authors": [
    {
      "name": "Team Mate Pro",
      "email": "sebastian.twarog1989@gmail.com"
    }
  ],
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
